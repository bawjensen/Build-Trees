extends skeleton

block body-content
  //- .mdl-layout__drawer
    span.mdl-layout-title Title
    nav.mdl-navigation
      .mdl-textfield.mdl-js-textfield.mdl-textfield--expandable
        label.mdl-button.mdl-js-button.mdl-button--icon(for='search')
          i.material-icons search
        .mdl-textfield__expandable-holder
          input#search.mdl-textfield__input(type='text')
          label.mdl-textfield__label(for='search') Enter your query...


  .mdl-grid
    .explanation.mdl-cell.mdl-cell--12-col
      h6 Click on an item to expand/collapse future purchases. Color of branches is based off the winrate of that particular build.
    .data-container.mdl-card.mdl-shadow--4dp.mdl-cell.mdl-cell--6-col.mdl-cell--8-col-tablet
      h5 5.11 (Before the AP Item Changes)
      #before-container
        img.loading-spinner(src='/img/spinner.gif')
    .data-container.mdl-card.mdl-shadow--4dp.mdl-cell.mdl-cell--6-col.mdl-cell--8-col-tablet
      h5 5.14 (After the AP Item Changes)
      #after-container
        img.loading-spinner(src='/img/spinner.gif')

  #tooltip.mdl-card.mdl-shadow--4dp
    .mdl-card__title
      h4.mdl-card__title-text
      div
        h5#count.mdl-card__subtitle-text
        h5#win-rate.mdl-card__subtitle-text

  script(src='js/d3/d3.min.js')
  script(src='js/champ.js')